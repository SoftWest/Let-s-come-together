<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.friendstogether.activity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"

        android:icon="@drawable/icon_program"

        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.softwest.friendstogether.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.softwest.friendstogether.activity.LoginActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize">
            
        </activity>
        <activity android:name="com.softwest.friendstogether.activity.LoginFacebookActivity"></activity>
    </application>

</manifest>
